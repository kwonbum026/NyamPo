<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_box">

    <!-- 탭 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_change_mascot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="만보기"
            android:fontFamily="@font/cafe24surround"
            android:textColor="#000000"
            android:background="@drawable/button_closet_left"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_change_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="랜드마크"
            android:fontFamily="@font/cafe24surround"
            android:textColor="#000000"
            android:background="@drawable/button_closet_right"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/runIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:contentDescription="만보기 아이콘"
            android:scaleType="fitXY"
            android:src="@drawable/run_icon" />

        <ImageButton
            android:id="@+id/lighthouseIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:contentDescription="랜드마크 아이콘"
            android:scaleType="fitXY"
            android:src="@drawable/lighthouse_icon" />
    </LinearLayout>

</LinearLayout>
